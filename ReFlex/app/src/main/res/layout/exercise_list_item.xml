<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/cardItemReps"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/textView"
                android:ems="10"
                android:hint="1"
                android:inputType="number"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/cardItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="29dp"
                android:layout_marginTop="18dp"
                android:text="Exercise"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/cardItemSetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/cardItemTitle"
                android:layout_below="@+id/cardItemTitle"
                android:layout_marginEnd="19dp"
                android:layout_marginTop="21dp"
                android:text="Sets: " />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal"
                android:layout_below="@+id/cardItemSetText"
                android:layout_centerHorizontal="true">

                <CheckBox
                    android:id="@+id/set1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <CheckBox
                    android:id="@+id/set2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <CheckBox
                    android:id="@+id/set3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <CheckBox
                    android:id="@+id/set4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <CheckBox
                    android:id="@+id/set5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout"
                android:layout_marginStart="74dp"
                android:layout_toEndOf="@+id/cardItemSetText"
                android:text="Reps:" />

            <Spinner
                android:id="@+id/cardItemSets"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_marginStart="15dp"
                android:dropDownWidth="50dp"
                android:spinnerMode="dropdown" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>