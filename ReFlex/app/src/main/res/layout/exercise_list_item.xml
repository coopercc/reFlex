<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="1"
                android:ems="10"
                android:id="@+id/cardItemReps"
                android:textAlignment="center"
                android:layout_marginStart="15dp"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_toEndOf="@+id/textView" />

            <TextView
                android:id="@+id/cardItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercise"
                android:layout_marginStart="29dp"
                android:layout_marginTop="18dp"
                android:textSize="24sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardItemSetText"
                android:text="Sets: "
                android:layout_marginTop="21dp"
                android:layout_below="@+id/cardItemTitle"
                android:layout_alignEnd="@+id/cardItemTitle"
                android:layout_marginEnd="19dp" />

            <LinearLayout
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/cardItemReps"
                android:layout_alignStart="@+id/cardItemSetText">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/set1"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/set2" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/set3"
 />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/set4" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/set5" />
            </LinearLayout>

            <EditText
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="1"
                android:ems="10"
                android:id="@+id/cardItemSets"
                android:textAlignment="center"
                android:layout_alignBaseline="@+id/cardItemSetText"
                android:layout_alignBottom="@+id/cardItemSetText"
                android:layout_alignStart="@+id/cardItemSetText"
                android:layout_marginStart="38dp" />

            <TextView
                android:text="Reps:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_marginStart="38dp"
                android:layout_alignBaseline="@+id/cardItemSets"
                android:layout_alignBottom="@+id/cardItemSets"
                android:layout_toEndOf="@+id/cardItemSets" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>